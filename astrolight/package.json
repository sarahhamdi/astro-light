{
  "name": "astrolight",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android-clean": "cd android && ./gradlew clean",
    "devtools": "react-devtools",
    "ios": "react-native run-ios",
    "ios-clean": "cd ios && pod cache clean --all && pod update --clean-install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "precommit": "yarn lint && yarn prettier && yarn typescript && yarn test",
    "prettier": "prettier --write .",
    "restart": "watchman watch-del-all && rm -rf node_modules && yarn install && yarn start --reset-cache",
    "start": "react-native start",
    "test": "jest --verbose",
    "typescript": "tsc --skipLibCheck",
    "watch-typescript": "tsc --skipLibCheck -w"
  },
  "dependencies": {
    "@react-native-community/slider": "^3.0.3",
    "react": "16.13.1",
    "react-native": "0.63.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/jest": "^25.2.3",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-test-renderer": "16.13.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
